{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ES5", "ES2015", "ESNext"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "typeRoots": ["./typings", "./node_modules/@types"],
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "lib",
    "__tests__",
    "*.js",
    "coverage",
    "docs",
    "migrations",
    "scripts",
    "seeds"
  ]
}
